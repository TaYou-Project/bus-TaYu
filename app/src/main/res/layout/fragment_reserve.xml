<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15sp"
    android:layout_marginBottom="15sp"
    tools:context=".ui.reserve.ReserveFragment">

    <!-- Floating Action Button : 현위치 탐색 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reserve_floatingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        app:backgroundTint="#D8D8D8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_location_searching_24"
        android:contentDescription="@string/reserve_floatingBtn" />

    <!-- recycleview_reserve.xml -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/reserve_SwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ReserveActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_reserve"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>