<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_stationInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_inside"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/search_stationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@string/search_stationName" />

        <TextView
            android:id="@+id/search_stationNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/search_stationName"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/search_stationName"
            android:textSize="15sp"
            tools:text="@string/search_stationNumber" />

        <TextView
            android:id="@+id/search_stationWay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/search_stationName"
            android:textSize="18sp"
            tools:text="@string/search_stationWay" />

        <TextView
            android:id="@+id/search_xCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_stationWay"
            android:layout_margin="8dp"
            android:textSize="18sp"
            tools:text="xCode" />

        <TextView
            android:id="@+id/search_yCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_stationWay"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/search_xCode"
            android:textSize="18sp"
            tools:text="yCode" />

        <Button
            android:id="@+id/search_btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/search_btn" />

    </RelativeLayout>

</LinearLayout>