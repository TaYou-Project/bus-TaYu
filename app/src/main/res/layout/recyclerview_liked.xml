<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_liked"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border_inside"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <!--정류소 명-->
        <TextView
            android:id="@+id/liked_stationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="정류소 명" />

        <!--정류소 번호-->
        <TextView
            android:id="@+id/liked_stationNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/liked_stationName"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/liked_stationName"
            android:textSize="15sp"
            tools:text="[ 정류소 번호 ]" />

        <!--노선명 : 버스번호-->
        <TextView
            android:id="@+id/liked_rtNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liked_stationName"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            tools:text="rtNm 버스명" />

        <Button
            android:id="@+id/liked_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/liked_Btn" />

        <!--android:background="@drawable/button_custom1"-->
    </RelativeLayout>

</LinearLayout>