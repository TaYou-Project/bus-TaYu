<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_liked"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginBottom="15sp"
    android:background="@drawable/borderline"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <!--정류소 명-->
        <TextView
            android:id="@+id/liked_stationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/liked_Btn"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="정류소 명" />

        <!--정류소 번호-->
        <TextView
            android:id="@+id/liked_stationNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/liked_Btn"
            android:layout_toEndOf="@id/liked_stationName"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            tools:text="[ 정류소 번호 ]" />

        <!--노선명 : 버스번호-->
        <TextView
            android:id="@+id/liked_rtNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/liked_Btn"
            android:layout_toEndOf="@id/liked_stationNum"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            tools:text="rtNm 버스명" />

        <Button
            android:id="@+id/liked_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:minWidth="10dp"
            android:text="@string/liked_Btn" />

    </RelativeLayout>

</LinearLayout>